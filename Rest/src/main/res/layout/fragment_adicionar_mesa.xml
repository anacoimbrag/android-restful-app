<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdicionarDAFragment">

    <TextView
        android:layout_width="wrap_content" android:text="Adicionar Mesa"
        android:layout_height="wrap_content" android:textSize="15sp"/>


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtMesaNome"
        android:hint="Nome"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/txtMesaMatricula"
        android:hint="Matricula"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Curso "
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:id="@+id/spinnerCurso"
            android:layout_height="wrap_content"
            android:prompt="@string/spinnerCurso"
            android:spinnerStyle="@android:style/Widget.Material.Spinner.Underlined"
            android:entries="@array/cursos"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/txtMesaFuncao"
        android:hint="Funcao"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:id="@+id/btnNovoMesa"/>
    </LinearLayout>



</LinearLayout>